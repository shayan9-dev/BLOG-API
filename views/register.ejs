<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Register</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
  <div class="min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
      <h2 class="text-2xl font-semibold text-center mb-6">Create an Account</h2>

      <form action="/user/register" method="post">
        <!-- Username Field -->
        <div class="mb-4">
          <label class="block text-gray-700 font-medium mb-2" for="username">Username</label>
          <input
            class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-400"
            type="text"
            id="username"
            placeholder="Choose a username"
            required
          />
        </div>

        <!-- Email Field -->
        <div class="mb-4">
          <label class="block text-gray-700 font-medium mb-2" for="email">Email</label>
          <input
            class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-400"
            type="email"
            id="email"
            placeholder="Enter your email"
            required
          />
        </div>

        <!-- Password Field -->
        <div class="mb-4">
          <label class="block text-gray-700 font-medium mb-2" for="password">Password</label>
          <input
            class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-400"
            type="password"
            id="password"
            placeholder="Create a password"
            required
          />
        </div>

        <!-- Confirm Password Field -->
        <div class="mb-6">
          <label class="block text-gray-700 font-medium mb-2" for="confirm-password">Confirm Password</label>
          <input
            class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-400"
            type="password"
            id="confirm-password"
            placeholder="Confirm your password"
            required
          />
        </div>

        <!-- Submit Button -->
        <button
          class="w-full bg-indigo-500 text-white font-semibold py-3 rounded-lg hover:bg-indigo-600"
          type="submit"
        >
          Register
        </button>

        <!-- Login Link -->
        <p class="mt-4 text-center text-gray-600">
          Already have an account? 
          <a href="/login" class="text-indigo-500 hover:underline">Login</a>
        </p>
      </form>
    </div>
  </div>
</body>
</html>
